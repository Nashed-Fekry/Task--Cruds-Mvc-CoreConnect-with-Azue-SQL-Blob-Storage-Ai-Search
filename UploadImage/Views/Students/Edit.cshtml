@model UploadImage.Models.Student

@{
    ViewData["Title"] = "Edit";
}


<h1 class="details-header">Edit</h1>

<div class="row card-body">
    <div class="" style="background-color: white; padding: 20px; border-radius: 5px;">
        <form asp-action="Edit" enctype="multipart/form-data" method="post" class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label col-sm-2 col-form-label">Name:</label>  <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label col-sm-2 col-form-label">Age:</label>   <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label col-sm-2 col-form-label">Phone:</label>  <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course" class="control-label col-sm-2 col-form-label">Course:</label>
                <select asp-for="Course" class="form-control" class="form-select" aria-label="Default select example">
                    <option selected="">Open this select menu</option>
                    <option value="C#">C#</option>
                    <option value="PHP">PHP</option>
                    <option value="Python">Python</option>
                    <option value="C++">C++</option>
                    <option value="JS">JS</option>
                    <option value="JAVA">JAVA</option>
                </select>
                <span asp-validation-for="Course" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label col-sm-2 col-form-label">Address:</label>  <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Image" for="formFileSm" class="form-label col-sm-2 col-form-label">Image </label>
                <input asp-for="Image" class="form-control form-control-sm" id="formFileSm" type="file">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <input type="submit" value="Edit" class="btn btn-primary col-sm-2 col-form-label" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



